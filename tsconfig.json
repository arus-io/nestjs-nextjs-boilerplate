{
  "extends": "./client/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "noEmit": false,
    "incremental": true,
    "declaration": true,
    "isolatedModules": false, // TODO - we need to remove this once we remove all require,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./"
  },
  "include": ["server", "constants"]
}
